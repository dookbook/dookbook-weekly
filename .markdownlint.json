{
    "default": true,
    "first-line-heading": true,
    "no-duplicate-heading": {
        "siblings_only": true
    },
    "line-length": {
        "line_length": 100,
        "heading_line_length": 80,
        "code_blocks": false,
        "tables": false
    },
    "no-inline-html": {
        "allowed_elements": [
            "h2",
            "section",
            "p",
            "img",
            "br",
            "a",
            "span",
            "strong",
            "em",
            "code"
        ]
    }
}
